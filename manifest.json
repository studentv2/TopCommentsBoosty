{
  "manifest_version": 3,
  "name": "Top Comments (Boosty) — Run",
  "description": "Разворачивает комментарии на Boosty, собирает топ по реакциям и показывает таблицу.",
  "version": "1.0.1",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.boosty.to/*"
  ],
  "action": {
    "default_title": "Top Comments",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
